{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "types": [
            "jest",
            "node"
        ],
        "esModuleInterop": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": false
    },
    "include": [
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/__tests__/**/*"
    ]
}